<script>
    function getNotification() {
        $.get("@Url.Content("~/api/")Notifications/User")
            .done(function (data, status) {
                if (data.status == "OK") {
                    var notifiations = data.result;
                    notifiations.map(o => {
                        $("#notificationList").append(`&middot;&nbsp;${o.message}`);
                    });
                }
            })
            .fail(function () {
                getNotification();
            });
    }
</script>


